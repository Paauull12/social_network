<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="600.0" prefWidth="500.0" style="-fx-background-color: #f4f4f4;" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.projfinal.controller.userViews.FriendRequestView">
    <children>
        <Text layoutX="160.0" layoutY="30.0" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-fill: #333;" text="Friend Requests" />

        <ListView fx:id="friendRequestList" layoutX="50.0" layoutY="50.0" prefHeight="400.0" prefWidth="400.0" style="-fx-background-color: #ffffff; -fx-border-color: #cccccc; -fx-border-radius: 5; -fx-background-radius: 5;" />

        <Button fx:id="acceptButton" layoutX="100.0" layoutY="470.0" mnemonicParsing="false" onAction="#pressAcceptFriendRequest" prefHeight="50.0" prefWidth="140.0" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-background-radius: 5;" text="Accept" />

        <Button fx:id="declineButton" layoutX="260.0" layoutY="470.0" mnemonicParsing="false" onAction="#pressDeclineFriendRequest" prefHeight="50.0" prefWidth="140.0" style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-background-radius: 5;" text="Decline" />

        <Button fx:id="closeButton" layoutX="190.0" layoutY="540.0" mnemonicParsing="false" onAction="#pressCloseButton" prefHeight="28.0" prefWidth="100.0" style="-fx-background-color: #666; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 5;" text="Close" />
    </children>
</AnchorPane>
